<header class="page-header">
<h1>User &raquo; Sign Up</h1>
</header>


<% if  flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<%= form_for :user, url: '/users', html: { class: "custom-form"} do |f| %>

  First name: 
  <%= f.text_field :first_name %>

  Last name: 
  <%= f.text_field :last_name %>

  Email: 
  <%= f.text_field :email %>
  Password:
   <%= f.password_field :password %>
  Password Confirmation: 
  <%= f.password_field :password_confirmation %></br>
  <%= f.submit "Submit" %>

<% end %>